    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color:burlywood;text-align:center">Welcome Guys....</h2>
<br />

    @using (Html.BeginForm("Create","Customers"))
    {
        @*<div class="form-group">
            @Html.LabelFor(c => c.Customer.id)
